{
"suggest.noselect": true,
  "languageserver": {
    "ccls": {
      "command": "ccls",
      "filetypes": ["c", "cpp", "cuda", "objc", "objcpp"],
      "rootPatterns": [".ccls-root", "compile_commands.json", "compile_flags.txt", ".git/"],
      "initializationOptions": {
         "cache": {
           "directory": "/tmp/ccls-cache"
         }
       }
    },
    "golang": {
      "command": "gopls",
      "rootPatterns": ["go.mod"],
      "filetypes": ["go"]
    },
    "metals": {
      "command": "metals-vim",
      "rootPatterns": ["build.sbt"],
      "filetypes": ["scala", "sbt"]
    },
    //"rust": {
    //  "command": "rust-analyzer",
    //  "filetypes": ["rust"],
    //  "rootPatterns": ["Cargo.toml"]
    //},
   "hdlChecker": {
		"command": "hdl_checker",
		"args": [
			"--lsp"
		],
		"filetypes": [
			"vhdl",
			"verilog",
			"systemverilog"
		]
	},
    "efm": {
      "command": "efm-langserver",
      "args": [],
      // custom config path
      // "args": ["-c", "/path/to/your/config.yaml"],
      "filetypes": ["vim", "eruby", "markdown", "yaml"]
    }
  },
 "python.jediEnabled": false,
 "rust-analyzer.updates.channel": "stable",
 "java.home": "/usr/lib/jvm/java-1.15.0-openjdk-amd64"
}

